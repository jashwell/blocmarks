<h1><%= @topic.name %></h1>

<div class="row">
  <div class="col-md-4">
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% @bookmark.each do |bookmark| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to bookmark.url %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
      <%= link_to "Add Bookmark", new_bookmark_path(@topic), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>