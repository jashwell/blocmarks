<div class="container">
  <div class="row" align="center">
    <h1>Your Topics</h1>
    <%= link_to "Add a New Topic", new_topic_path, class: 'label label-warning' %>


    <% @topics.each do |topic| %>
      <h2><%= link_to topic.title, topic %>
        <small>
          <%= link_to "Delete Topic", [@topic, topic], method: :delete, class: 'btn btn-default btn-xs', data: { confirm: 'Are you sure you want to delete this topic?' } %> 
        </small>
      </h2>

        <div class="container">
          <div class="row">
            <% topic.bookmarks.each do |bookmark| %>
              <div class="col-xs-6 col-md-3 thumbnail">
                <%= link_to "#{bookmark.url}" %>
              </div>
            <% end %>
          </div>
        </div>
      
        
    <% end %>

  </div>


</div>




