          <small>
            <% if policy(bookmark).edit? %>
            <%= link_to "Edit Bookmark", edit_topic_bookmark_path(bookmark.topic, bookmark), class: 'label label-default' %>
            <% end %>
            <br />

            <% if policy(bookmark).destroy? %>
            <%= link_to "Delete Bookmark", [bookmark.topic, bookmark], method: :delete, class: 'label label-default', data: { confirm: 'Are you sure you want to delete this bookmark?' } %> 
            <% end %>
          </small>