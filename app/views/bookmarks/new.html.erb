<h1>Add a New Bookmark</h1>

  <div class="col-md-8">
    <%= form_for [@topic, @bookmark] do |f| %>


      <div class="form-group">
        <%= f.label :url %>
        <%= f.url_field :url, class: 'form-control', placeholder: "Enter the Bookmark's URL" %>
      </div>

      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>